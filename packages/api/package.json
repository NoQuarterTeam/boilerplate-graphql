{
  "private": true,
  "name": "@boilerplate/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "watch": "tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "start": "ts-node src/index.ts",
    "generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "build": "rimraf dist && tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix --cache --ext .ts,.tsx src",
    "lint:test": "eslint --cache --ext .ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "lint-staged",
    "postinstall": "prisma generate"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --cache"
    ]
  },
  "dependencies": {
    "@prisma/client": "2.26.0",
    "@sendgrid/client": "7.4.3",
    "@sendgrid/mail": "7.4.5",
    "@sentry/node": "6.8.0",
    "@sentry/tracing": "6.8.0",
    "apollo-server-express": "2.25.2",
    "bcryptjs": "2.4.3",
    "chalk": "4.1.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "dataloader": "2.0.0",
    "dayjs": "1.10.6",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "express-jwt": "6.0.0",
    "glob": "7.1.7",
    "graphql": "15.5.1",
    "graphql-fields": "2.0.3",
    "graphql-scalars": "1.10.0",
    "handlebars": "4.7.7",
    "ioredis": "4.27.6",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "nodemailer": "6.6.2",
    "pg": "8.6.0",
    "prisma": "2.26.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.1.1",
    "type-graphql-dataloader": "0.4.0",
    "typedi": "0.10.0",
    "typegraphql-prisma": "0.14.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/express-jwt": "6.0.2",
    "@types/graphql-fields": "1.3.4",
    "@types/ioredis": "4.26.5",
    "@types/jsonwebtoken": "8.5.4",
    "@types/morgan": "1.9.3",
    "@types/node": "14.17.5",
    "@types/nodemailer": "6.4.4",
    "ts-node": "10.0.0",
    "ts-node-dev": "1.1.8"
  }
}
