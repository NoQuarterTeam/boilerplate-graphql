{
  "private": true,
  "name": "@boilerplate/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "dev": "tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "watch": "yarn dev",
    "start": "node dist",
    "generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "build": "rm -rf dist && tsc --build",
    "buildSchema": "ts-node buildSchema.ts",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --fix --config .eslintrc.commit.js --cache --ext .ts,.tsx src",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts' --ignore-path ../../.prettierignore",
    "pre-commit": "lint-staged",
    "postinstall": "prisma generate"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write --ignore-path ../../.prettierignore"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --config .eslintrc.commit.js"
    ]
  },
  "dependencies": {
    "@prisma/client": "4.4.0",
    "@sendgrid/client": "7.7.0",
    "@sendgrid/mail": "7.7.0",
    "@sentry/node": "7.16.0",
    "@sentry/tracing": "7.16.0",
    "apollo-graphql": "0.9.7",
    "apollo-server-express": "3.10.3",
    "aws-sdk": "2.1206.0",
    "bcryptjs": "2.4.3",
    "chalk": "4.1.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "dayjs": "1.11.6",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-jwt": "6.1.2",
    "glob": "8.0.3",
    "graphql": "15.8.0",
    "graphql-fields": "2.0.3",
    "graphql-scalars": "1.20.0",
    "handlebars": "4.7.7",
    "ioredis": "5.2.3",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "nodemailer": "6.8.0",
    "pg": "8.8.0",
    "prisma": "4.4.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.1.1",
    "typedi": "0.10.0",
    "typegraphql-prisma": "0.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.14",
    "@types/express-jwt": "6.0.4",
    "@types/graphql-fields": "1.3.4",
    "@types/ioredis": "4.28.10",
    "@types/jsonwebtoken": "8.5.9",
    "@types/morgan": "1.9.3",
    "@types/node": "16.18.0",
    "@types/nodemailer": "6.4.6",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0"
  }
}
