{
  "private": true,
  "name": "@boilerplate/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "watch": "tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "start": "ts-node src/index.ts",
    "generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "build": "rimraf dist && tsc --build",
    "buildSchema": "ts-node buildSchema.ts",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --fix --config .eslintrc.commit.js --cache --ext .ts,.tsx src",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "lint-staged",
    "postinstall": "prisma generate"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --config .eslintrc.commit.js"
    ]
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "@sendgrid/client": "7.6.0",
    "@sendgrid/mail": "7.6.0",
    "@sentry/node": "6.15.0",
    "@sentry/tracing": "6.15.0",
    "apollo-server-express": "3.5.0",
    "aws-sdk": "2.1018.0",
    "bcryptjs": "2.4.3",
    "chalk": "4.1.2",
    "class-transformer": "0.5.0",
    "class-validator": "0.13.2",
    "dayjs": "1.10.7",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "express-jwt": "6.1.0",
    "glob": "7.2.0",
    "graphql": "15.7.2",
    "graphql-fields": "2.0.3",
    "graphql-scalars": "1.13.6",
    "handlebars": "4.7.7",
    "ioredis": "4.28.0",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "nodemailer": "6.7.1",
    "pg": "8.7.1",
    "prisma": "^3.5.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.1.1",
    "typedi": "0.10.0",
    "typegraphql-prisma": "0.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/express-jwt": "6.0.2",
    "@types/graphql-fields": "1.3.4",
    "@types/ioredis": "4.28.1",
    "@types/jsonwebtoken": "8.5.6",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.9",
    "@types/nodemailer": "6.4.4",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8"
  }
}
