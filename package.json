{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start:api": "node packages/api/dist",
    "build:api": "cd packages/api && yarn build",
    "heroku-prebuild": "rm -rf packages/{web,app}",
    "heroku-cleanup": "cd packages/api && yarn generate",
    "build": "yarn build:api",
    "typecheck": "lerna run typecheck",
    "lint:fix": "lerna run lint:fix",
    "ci": "yarn typecheck && yarn lint:fix"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "babel-eslint": "10.1.0",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "typescript": "4.5.4"
  },
  "resolutions": {
    "prettier": "2.5.1"
  }
}
